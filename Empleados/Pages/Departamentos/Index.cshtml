@page
@model Empleados.Pages.Departamentos.IndexModel
@{
	ViewData["Title"] = "Lista de Departamentos";
}

<div class="container pt-5">

	<div class="row">
		<div class="col-9">
			<h2>Lista de Departamentos</h2>
		</div>
		<div class="col-3">
			<a class="btn btn-success" asp-page="/Departamentos/Insertar">Insertar Departamento</a>
		</div>
	</div>

	<br />
	<br />

	@if (Model.Departamentos.Count() > 0) {
		<table id="tblCategorias" class="table table-striped table-bordered" style="width:100%;">
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(m => m.Departamentos.FirstOrDefault().Id)</th>
					<th>@Html.DisplayNameFor(m => m.Departamentos.FirstOrDefault().NombreDepartamento)</th>
					<th>@Html.DisplayNameFor(m => m.Departamentos.FirstOrDefault().Descripcion)</th>
					<th>@Html.DisplayNameFor(m => m.Departamentos.FirstOrDefault().FechaCreacion)</th>
					<th>Acción</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var departamento in Model.Departamentos)
				{
					<tr>
						<td>@Html.DisplayFor(m => departamento.Id)</td>
						<td>@Html.DisplayFor(m => departamento.NombreDepartamento)</td>
						<td>@Html.DisplayFor(m => departamento.Descripcion)</td>
						<td>@Html.DisplayFor(m => departamento.FechaCreacion)</td>
						<td>
							<a class="btn btn-dark text-white mt-2 mb-2" asp-page="../Departamentos/Detalle" asp-route-id="@departamento.Id">Ver</a>
							<a class="btn btn-warning text-white mt-2 mb-2" asp-page="../Departamentos/Editar" asp-route-id="@departamento.Id">Editar</a>
							<a class="btn btn-danger mt-2 mb-2" asp-page="../Departamentos/Eliminar" asp-route-id="@departamento.Id">Eliminar</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	} else {
		<p>No hay Departamentos</p>
	}
</div>